{
    "rest": {
        "address":"0.0.0.0:8089"
    },
    "logger":{}, 
    "app":{
        "applications": [
            {
                "name": "se",
                "prefix": "sedge",
                "resources": [
                {
                    "name": "argome.argo.cisco.com/v1.Node",
                    "service": "node-manager",
                    "endpoint": "node-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.NodeOper",
                    "service": "node-manager",
                    "endpoint": "nodeoper-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.Cluster",
                    "service": "clusterd",
                    "endpoint": "cluster-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.ClusterMember",
                    "service": "clusterd",
                    "endpoint": "cluster-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.Organization",
                    "service": "organization-manager",
                    "endpoint": "organization-manager-topic"
                }
                ],
                "services": [
                    {
                    "name": "node-manager",
                    "endpoint": "node-manager-topic",
                    "database": "nodemgr"
                },
                {
                    "name": "clusterd",
                    "endpoint": "clusterd-topic",
                    "database": "clusterd"
                },
                {
                    "name": "organization-manager",
                    "endpoint": "organization-manager-topic",
                    "database": "organizationmgr"
                }
                ]
            }
        ]
    },
    "transport":{
        "type": "kafka",
        "endpoint": "clusterd-topic"
    },
    "platform":{
        "kafka":{
            "brokerAddrs":[
                "kafka-svc:9092"
            ],
            "secure": false
        }
    },
    "db":{
        "path": "mongo-svc:27017", 
        "type": "mongodb",
        "name": "clusterd"
    },
    "directory":{
        "service": "clusterd",
        "type": "mongodb",
        "skipDefault": true,
        "endpoint": "clusterd-directory-notifier",
        "database": {
            "name": "clusterd-directory"
        }
    }
}
