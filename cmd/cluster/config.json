{
    "rest": {
        "address":"0.0.0.0:8089"
    },
    "logger":{}, 
    "app":{
        "applications": [
            {
                "name": "se",
                "prefix": "sedge",
                "resources": [
                {
                    "name": "argome.argo.cisco.com/v1.Node",
