{
    "rest": {
        "address":":8089"
    },
    "logger":{}, 
    "app":{
        "applications": [
            {
                "name": "se",
                "prefix": "sedge",
                "resources": [
                {
                    "name": "argome.argo.cisco.com/v1.Node",
                    "service": "node-manager",
                    "endpoint": "node-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.NodeOper",
                    "service": "node-manager",
                    "endpoint": "nodeoper-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.Cluster",
                    "service": "clusterd",
                    "endpoint": "cluster-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.ClusterMember",
                    "service": "clusterd",
                    "endpoint": "cluster-topic"
                },
                {
                    "name": "argome.argo.cisco.com/v1.Organization",
                    "service": "organization-manager",
                    "endpoint": "organization-manager-topic"
                }
                ],
                "services": [
                {
                    "name": "node-manager",
                    "endpoint": "node-manager-topic"
                },
                {
                    "name": "clusterd",
                    "endpoint": "clusterd-topic"
                },
                {
                    "name": "organization-manager",
                    "endpoint": "organization-manager-topic"
                }
                ]
            }
        ]
    },
    "transport":{
        "type": "kafka",
        "endpoint": "clusterd-topic"
    },
    "platform": {
        "kafka":{
            "brokerAddrs":[
            "kafka-svc.kafka.svc:9092"
            ],
            "certfile": "/security/client.cer.pem",
            "cacertfile": "/security/server.cer.pem",
            "keyfile": "/security/client.key.pem",
            "secure": true
        },
        "mongo":{
            "cacertfile": "/certs/cacerts.crt",
            "duration": 120000,
            "path": "mongodb.mongodb.svc:27017",
            "secure": "true",
            "name": "argome"
        }
    },
    "db":{
        "appname": "argome",
        "path": "mongodb.mongodb.svc:27017",
        "type":"mongodb",
        "secure": true
    },
    "directory":{
        "service": "clusterd",
        "type": "mongodb",
        "skipDefault": true,
        "database": {
            "name": "directory"
        }
    }
}
