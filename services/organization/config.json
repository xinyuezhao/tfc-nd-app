{
    "rest": {
        "address":":8089"
    },
    "logger":{},
    "app":{
        "applications": [
            {
                "name": "terraform",
                "prefix": "terraformdge",
                "resources": [
                {
                    "name": "terraform.cisco.com/v1.Organization",
                    "service": "organization-manager",
                    "endpoint": "organization-topic"
                },
                {
                    "name": "terraform.cisco.com/v1.Agent",
                    "service": "agent-manager",
                    "endpoint": "agent-topic"
                },
                {
                    "name": "terraform.cisco.com/v1.TokenList",
                    "service": "agent-manager",
                    "endpoint": "agent-topic"
                },
                {
                    "name": "terraform.cisco.com/v1.Agentpool",
                    "service": "agentpool-manager",
                    "endpoint": "agentpool-topic"
                },
                {
                    "name": "terraform.cisco.com/v1.AgentpoolList",
                    "service": "agentpool-manager",
                    "endpoint": "agentpool-topic"
                },
                {
                    "name": "terraform.cisco.com/v1.Credentials",
                    "service": "credentials-manager",
                    "endpoint": "credentials-topic"
                }
                ],
                "services": [
                {
                    "name": "organization-manager",
                    "endpoint": "organization-manager-topic"
                },
                {
                    "name": "agent-manager",
                    "endpoint": "agent-manager-topic"
                },
                {
                    "name": "agentpool-manager",
                    "endpoint": "agentpool-manager-topic"
                },
                {
                    "name": "credentials-manager",
                    "endpoint": "credentials-manager-topic"
                }
                ]
            }
        ]
    },
    "transport":{
        "type": "kafka", 
        "endpoint": "organization-manager-topic"
    },
    "platform": {
        "kafka":{
            "brokerAddrs":[
            "kafka-svc.kafka.svc:9092"
            ],
            "certfile": "/security/client.cer.pem",
            "cacertfile": "/security/server.cer.pem",
            "keyfile": "/security/client.key.pem",
            "secure": true
        },
        "mongo":{
            "cacertfile": "/certs/cacerts.crt",
            "duration": 120000,
            "path": "mongodb.mongodb.svc:27017",
            "secure": "true",
            "name": "terraform"
        }
    },
    "db":{
        "appname": "terraform",
        "path": "mongodb.mongodb.svc:27017",
        "type":"mongodb",
        "secure": true
    },
    "directory":{
        "service": "organization-manager",
        "type": "mongodb",
        "skipDefault": true,
        "database": {
            "name": "directory"
        }
    }
}
